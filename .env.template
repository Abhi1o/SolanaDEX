# Solana DEX Frontend - Environment Variables Template
# Copy this file to .env.local for development or configure in your deployment platform for production

# =============================================================================
# REQUIRED VARIABLES
# =============================================================================

# Solana RPC Configuration
# For development: Use public endpoints (devnet/testnet)
# For production: Use premium RPC providers (QuickNode, Alchemy, Helius, Triton)
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# Jupiter API for swap quotes
NEXT_PUBLIC_JUPITER_API_URL=https://quote-api.jup.ag/v6

# =============================================================================
# OPTIONAL VARIABLES (Recommended for Production)
# =============================================================================

# Error Tracking (Sentry)
# Get your DSN from: https://sentry.io/
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=false

# Analytics
# Configure your analytics provider (Google Analytics, Mixpanel, etc.)
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Solana DEX

# RPC Polling Configuration
# Options: 'production' (default), 'development', 'conservative'
# Use 'conservative' for high-traffic or rate-limited environments
NEXT_PUBLIC_RPC_MODE=production

# =============================================================================
# FALLBACK RPC ENDPOINTS (Production)
# =============================================================================

# Configure multiple RPC endpoints for reliability
NEXT_PUBLIC_SOLANA_RPC_MAINNET=https://api.mainnet-beta.solana.com
NEXT_PUBLIC_SOLANA_RPC_FALLBACK_1=
NEXT_PUBLIC_SOLANA_RPC_FALLBACK_2=

# =============================================================================
# ENVIRONMENT-SPECIFIC EXAMPLES
# =============================================================================

# Development (.env.local)
# NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
# NEXT_PUBLIC_SOLANA_NETWORK=devnet
# NEXT_PUBLIC_ENABLE_ERROR_TRACKING=false
# NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Staging (.env.staging)
# NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
# NEXT_PUBLIC_SOLANA_NETWORK=devnet
# NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true
# NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Production (.env.production)
# NEXT_PUBLIC_SOLANA_RPC_URL=https://your-premium-rpc.com
# NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta
# NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true
# NEXT_PUBLIC_ENABLE_ANALYTICS=true

# =============================================================================
# NOTES
# =============================================================================

# 1. All variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# 2. Never commit .env.local or .env.production to version control
# 3. Use your deployment platform's environment variable settings for production
# 4. Premium RPC providers are strongly recommended for production use
# 5. Configure error tracking and analytics for better monitoring
